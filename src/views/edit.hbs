<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
      integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <link rel="stylesheet" href="../css/index.css" />
    <link rel="stylesheet" href="../css/project.css" />
  </head>
  <body>
    <!-- navbar -->
    <nav style="background-color: #004643" class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <a class="navbar-brand ms-3" href="/"><img
            src="/image/logo.png"
            style="width: 40px; height: 40px"
            alt=""
            srcset=""
          /></a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link text-light fw-bold ms-2"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-light fw-bold ms-2"
                aria-current="true"
                href="/add-project"
                style="color: #f9bc60"
              >Add Project</a>
            </li>
            <li class="nav-item">
              <a
                class="nav-link text-light fw-bold ms-2"
                href="/testimonial"
              >Testimonial</a>
            </li>
          </ul>
          <div class="d-flex" role="search">
            <button
              class="border border-0 me-4 rounded"
              type="submit"
              style="background-color: #f9bc60"
            >
              <a class="nav-link text-dark px-2 fw-bold" href="/contact">Contact
                Me</a>
            </button>
          </div>
        </div>
      </div>
    </nav>
    <!-- <hr class="border" /> -->
    <!-- navbar end -->
    <!-- form  -->
    <form
      style=" background-color: #004643 ; margin-top: 1px;"
      class="p-1 mx-auto mb-0"
      method="post"
      action="/add-project"
    >
      <h3 class="text-light d-flex justify-content-center mt-3">Update My
        Project</h3>
      <div class="vanila mx-auto">
        <div class="mb-3">
          <label for="title" class="text-light">Tittle</label>
          <input
            type="text"
            class="form-control bg-body-secondary"
            name="title"
            id="title"
            value="{{dataDummy.title}}"
          />
        </div>
        <div class="mb-3 d-flex">
          <div class="w-50 p-1">
            <label for="start-date" class="form-label text-light">Start Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="startDate"
              id="start-date"
              value="{{dataDummy.startDate}}"
            />
          </div>
          <div class="w-50 p-1">
            <label for="end-date" class="form-label text-light">End Date</label>
            <input
              type="date"
              class="form-control bg-body-secondary"
              name="endDate"
              id="end-date"
              value="{{dataDummy.endDate}}"
            />
          </div>
        </div>
        <div class="mb-3">
          <label
            for="Description"
            class="form-label text-light"
          >Description</label>
          <textarea
            class="form-control bg-body-secondary"
            name="Description"
            id="Description"
            style="resize: none; height: 100px"
          >{{dataDummy.Description}}</textarea>
        </div>
        <div class="">
          <label
            class="text-light"
            for="Technologies "
          >{{dataDummy.Technologies}}</label>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Node js"
              id="node"
            />
            <label class="text-light" for="node">Node Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Golang"
              id="golang"
            />
            <label class="text-light" for="golang">Golang</label>
          </div>
          <div>
            <input
              class="bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="React js"
              id="react"
            />
            <label class="text-light" for="react">React Js</label>
            <input
              class="ms-3 bg-body-secondary"
              type="checkbox"
              name="Technologies"
              value="Java"
              id="java"
            />
            <label class="text-light" for="java">Java</label>
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label text-light mt-2">Upload Image</label>
          <input
            class="form-control form-control-sm bg-body-secondary"
            id="image"
            type="file"
          />
        </div>
        <div class="mt-3 text-end">
          <button
            type="submit"
            class="btn btn-outline-success py-1 text-dark fw-bold mb-5"
            style="background-color: #f9bc60"
          >
            Post Project
          </button>
        </div>
      </div>
    </form>
    <!-- form end -->

  </body>
  <script src="/src/assets/js/project.js"></script>
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  ></script>
</html>